<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_vm_tag_tree" model="ir.ui.view">
            <field name="name">vm.tag.tree</field>
            <field name="model">vm.tag</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Tag">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_vm_tag_form" model="ir.ui.view">
            <field name="name">vm.tag.form</field>
            <field name="model">vm.tag</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vm_tag_search" model="ir.ui.view">
            <field name="name">vm.tag.search</field>
            <field name="model">vm.tag</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Tag">
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Name" name="group_by_lbr_tag_name"
                                domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_vm_tag_view">
            <field name="name">Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vm.tag</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vm_tag_search" />
        </record>


    </data>
</odoo>
