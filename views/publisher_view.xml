<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_vm_publisher_tree" model="ir.ui.view">
            <field name="name">vm.publisher.tree</field>
            <field name="model">vm.publisher</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Publisher">
                    <field name="name"/>
                    <field name="media_ids" widget="many2many_tags"/>
<!--                    <field name="address_id" invisible="1"/>-->
                </tree>
            </field>
        </record>

        <record id="view_vm_publisher_form" model="ir.ui.view">
            <field name="name">vm.publisher.form</field>
            <field name="model">vm.publisher</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Publisher">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
<!--                            <field name="address_id" context="{'show_address': 1}"-->
<!--                                   options='{"always_reload": True}'/>-->
                        </group>
                        <group col="4" string="Media(s)">
                            <field name="media_ids" colspan="4" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vm_publisher_search" model="ir.ui.view">
            <field name="name">vm.publisher.search</field>
            <field name="model">vm.publisher</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Publisher">
                    <field name="name"/>
<!--                    <field name="address_id"/>-->
                    <field name="media_ids"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Publisher" name="group_by_lbr_publisher_name"
                                domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_open_vm_publisher_view" model="ir.actions.act_window" >
            <field name="name">Publishers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vm.publisher</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vm_publisher_search"/>
        </record>


    </data>
</odoo>
